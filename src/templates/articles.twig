{% extends "layout.twig" %}
{% block content %}

<h1>Hello {{ username }}, welcome to the Articles.</h1> 
<h2>Articles</h2>

{% include 'create.twig' %}

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Text</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for article in articles %}
    <tr>
        <th scope="row">{{ article.id }}</th>
        <td>{{ article.name }}</td>
        <td>
          <a href="/delete/{{ article.id }}" class="btn btn-danger">Delete</a>
          <a href="/update/{{ article.id }}" class="btn btn-success">Update</a>
        </td>
    </tr>
        {# <a href="{{ urlFor('delete', [article.id]) }}"> #}
        {# <li>{{ article.text|e }} <a href="{{ path_for('delete', article.id) }}"></li> #}
    {% endfor %}
  </tbody>
</table>



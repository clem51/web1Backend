{% extends "layout.twig" %}
{% block content %}

    <h1>Hello {{ username }}, welcome to the Articles.</h1>

    {% include 'create.twig' %}

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Text</th>
            <th scope="col">Contents</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <th scope="row">{{ article.article_id }}</th>
                <td>{{ article.name }}</td>
                <td>
                    {% for content in article.contents %}
                    <div> {{ content.value }}</div>
                    <div> {{ content.name }}</div>
                        <hr/>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ urlFor("delete", { id: article.article_id }) }}" class="btn btn-danger">Delete</a>
                    <a href="{{ urlFor("update", { id: article.article_id }) }}" class="btn btn-success">Update</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

